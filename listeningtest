            <button>Semestre 7</button>
            <button>Intermediário</button>
            <button id="logoutBtn">Sair</button>
        </div>
    </div>

    <div class="content">
        <h1>Selecione o semestre para começar</h1>

        <div class="test-types" style="display:none;"></div>

        <div class="questions"></div>

        <button class="send-all-btn">Enviar todas as questões</button>
    </div>
</div>

<script>
const menuButtons = document.querySelectorAll('.menu button');
const questionsContainer = document.querySelector('.questions');
const testTypesContainer = document.querySelector('.test-types');
const title = document.querySelector('.content h1');
const sendAllBtn = document.querySelector('.send-all-btn');

let currentSemester = null;
let currentType = null;

function createQuestions() {
    questionsContainer.innerHTML = '';
    sendAllBtn.style.display = "none";

    for (let i = 1; i <= 10; i++) {
        const item = document.createElement('div');
        item.classList.add('question-item');

        const btn = document.createElement('button');
        btn.classList.add('question-button');
        btn.innerHTML = `Questão ${i} <span class="arrow">&#9660;</span>`;

        const editor = document.createElement('div');
        editor.classList.add('editor');
        editor.innerHTML = `
            <textarea placeholder="Digite o enunciado da questão aqui..."></textarea>

            <label><b>Upload de áudio (MP3, WAV):</b></label>
            <input type="file" accept="audio/*" class="audioUpload">

            <audio controls style="display:none;"></audio>

            <div class="options">
                <input type="text" placeholder="Alternativa A">
                <input type="text" placeholder="Alternativa B">
                <input type="text" placeholder="Alternativa C">
                <select>
                    <option value="" disabled selected>Selecione a resposta correta</option>
                    <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="C">C</option>
                </select>
            </div>

            <button class="close-btn">Fechar</button>
        `;

        item.appendChild(btn);
        item.appendChild(editor);
        questionsContainer.appendChild(item);

        btn.addEventListener('click', () => {
            document.querySelectorAll('.editor').forEach(ed => ed.style.display = 'none');
            document.querySelectorAll('.arrow').forEach(ar => ar.classList.remove('open'));
            editor.style.display = 'flex';
            btn.querySelector('.arrow').classList.add('open');
        });

        editor.querySelector('.close-btn').addEventListener('click', () => {
            editor.style.display = 'none';
            btn.querySelector('.arrow').classList.remove('open');
        });

        // Salvar automaticamente o texto
        const textarea = editor.querySelector('textarea');
        const saved = localStorage.getItem(`q_${currentSemester}_${currentType}_${i}`);
        if(saved) textarea.value = saved;

        textarea.addEventListener('input', () => {
            localStorage.setItem(`q_${currentSemester}_${currentType}_${i}`, textarea.value);
        });

        // Upload de áudio + preview
        const audioUpload = editor.querySelector('.audioUpload');
        const audioPlayer = editor.querySelector('audio');

        audioUpload.addEventListener('change', function() {
            const file = this.files[0];
            if(file){
                const url = URL.createObjectURL(file);
                audioPlayer.src = url;
                audioPlayer.style.display = 'block';
            }
        });
    }

    sendAllBtn.style.display = "block";
}

menuButtons.forEach(btn => {
    btn.addEventListener('click', () => {
        const text = btn.textContent.trim();

        if(text === 'Página Inicial'){
            title.textContent = 'Selecione o semestre para começar';
            questionsContainer.innerHTML = '';
            testTypesContainer.style.display = 'none';
            sendAllBtn.style.display = 'none';
        } 
        else if(text === 'Sair'){
            alert('Saindo do sistema...');
        } 
        else {
            currentSemester = text;
            title.textContent = 'Escolha o tipo de prova';
            questionsContainer.innerHTML = '';
            sendAllBtn.style.display = 'none';

            testTypesContainer.innerHTML = '';
            ['Tipo A','Tipo B','Tipo C'].forEach(type => {
                const tBtn = document.createElement('button');
                tBtn.textContent = type;

                tBtn.addEventListener('click', () => {
                    currentType = type;
                    title.textContent = `${currentSemester} - ${type}`;
                    testTypesContainer.style.display = 'none';
                    createQuestions();
                });

                testTypesContainer.appendChild(tBtn);
            });

            testTypesContainer.style.display = 'flex';
        }
    });
});
</script>

</body>
</html>
