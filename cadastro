<body>

<div class="login-container">
    <div class="title">Criar Conta</div>

    <div class="field">
        <label>Nome completo</label>
        <input type="text" id="nome" />
    </div>

    <div class="field">
        <label>Email</label>
        <input type="email" id="email" />
    </div>

    <div class="field">
        <label>Senha</label>
        <input type="password" id="senha" />
    </div>

    <div class="field">
        <label>Confirmar senha</label>
        <input type="password" id="confirmar" />
    </div>

    <button class="btn-login" onclick="cadastrar()">Cadastrar</button>

    <div class="forgot-create">
        <a href="login.html">Já tem uma conta? Entrar</a>
    </div>

    <div class="msg" id="msg"></div>
</div>

<script>
function cadastrar() {
    const nomeCompleto = document.getElementById("nome").value;
    const emailCadastro = document.getElementById("email").value;
    const senhaCadastro = document.getElementById("senha").value;
    const confirmarSenha = document.getElementById("confirmar").value;
    const msg = document.getElementById("msg");

    // Verificar se todos os campos foram preenchidos
    if (!nomeCompleto || !emailCadastro || !senhaCadastro || !confirmarSenha) {
        msg.textContent = "Preencha todos os campos.";
        msg.style.color = "#e63946";
        return;
    }

    // Verificar se as senhas coincidem
    if (senhaCadastro !== confirmarSenha) {
        msg.textContent = "As senhas não coincidem.";
        msg.style.color = "#e63946";
        return;
    }

    // Salvar as credenciais no localStorage
    localStorage.setItem("email", emailCadastro); // Salva o email
    localStorage.setItem("senha", senhaCadastro); // Salva a senha

    msg.textContent = "Cadastro realizado!";
    msg.style.color = "#000";

    // Redirecionar para a tela de login após 800ms
    setTimeout(() => {
        window.location.href = "login.html"; // Redireciona para a tela de login
    }, 800);
}
</script>

